import telebot
import webbrowser
from telebot import types

bot = telebot.TeleBot('7486869609:AAGw8OCiqboXcp1L1VKnkbQ3ZjuFH4owooY')

@bot.message_handler(content_types=['photo'])
def get_photo(message):
    markup = types.InlineKeyboardMarkup()
    markup.add(types.InlineKeyboardButton('delete photo', callback_data = 'delete'))
    bot.reply_to(message, 'What a beautiful photo', reply_markup=markup)

@bot.message_handler(content_type='video')
def get_photo(message):
    markup = types.InlineKeyboardMarkup()
    markup.add(types.InlineKeyboardButton('delete video', callback_data = 'delete'))
    bot.reply_to(message, 'What a beautiful video', reply_markup=markup)


@bot.message_handler(content_type='audio')
def get_photo(message):
    markup = types.InlineKeyboardMarkup()
    markup.add(types.InlineKeyboardButton('delete audio', callback_data = 'delete'))
    bot.reply_to(message, 'What a beautiful audio', reply_markup=markup)


@bot.callback_query_handler(func = lambda callback: True)
def delete(callback):
    bot.delete_message(callback.message.chat.id, callback.message.message_id - 1)

@bot.message_handler(commands = ['site', 'website'])
def site(message):
    webbrowser.open('https://github.com/RomaIliev')



@bot.message_handler(commands = ['start'])
def main(message):
    bot.send_message(message.chat.id, f'Hello, {message.from_user.first_name}')


@bot.message_handler(commands = ['help'])
def help(message):
    markup = types.InlineKeyboardMarkup()
    btn1 = types.InlineKeyboardButton('code of bot', url='https://github.com/RomaIliev/telegram_bot')
    btn2 = types.InlineKeyboardButton('have a questions', url='https://google.com')
    markup.row(btn1, btn2)
    bot.send_message(message.chat.id, 'What help you need?', reply_markup=markup)

@bot.message_handler()
def info(message):
    if message.text.lower() == 'hello' or message.text.lower() == 'привет':
        bot.send_message(message.chat.id, f'Hello, {message.from_user.first_name}')
    elif message.text.lower() == 'id':
        bot.reply_to(message, f'ID: {message.from_user.id}')


bot.polling(none_stop = True)